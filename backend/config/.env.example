# Violt Core Lite - Backend Configuration

# Application settings
APP_NAME=Violt Core Lite
APP_VERSION=0.1.0
DEBUG=true
LOG_LEVEL=info

# Server settings
HOST=0.0.0.0
PORT=8000
WORKERS=1
RELOAD=true

# Database settings
DATABASE_URL=sqlite:///./violt.db
DATABASE_CONNECT_ARGS={"check_same_thread": false}

# Security settings
SECRET_KEY=changeme_in_production_this_is_not_secure
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440  # 24 hours

# CORS settings
CORS_ORIGINS=["*"]
CORS_METHODS=["*"]
CORS_HEADERS=["*"]

# MongoDB settings (optional)
MONGODB_ENABLED=false
MONGODB_URI=mongodb://localhost:27017
MONGODB_DATABASE=violt_analytics

# Background worker settings
AUTOMATION_CHECK_INTERVAL=5  # seconds

# Device discovery settings
DEVICE_DISCOVERY_ENABLED=true
DEVICE_DISCOVERY_INTERVAL=300  # seconds

# Integration settings
XIAOMI_INTEGRATION_ENABLED=true
ALEXA_INTEGRATION_ENABLED=false
GOOGLE_HOME_INTEGRATION_ENABLED=false

# Logging settings
LOG_FILE=logs/violt.log
LOG_ROTATION=1 day
LOG_RETENTION=30 days
